<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/backgroundColor"
    android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextInputLayout"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                style="@style/AppTheme.EditText"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextInputLayout"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/input_email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                style="@style/AppTheme.EditText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextInputLayout"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/input_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:inputType="textPassword"
                style="@style/AppTheme.EditText"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextInputLayout"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/input_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repetir senha"
                android:inputType="textPassword"
                style="@style/AppTheme.EditText"/>

        </android.support.design.widget.TextInputLayout>


        <com.ornach.nobobutton.NoboButton
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:nb_radius="25dp"
            app:nb_backgroundColor="#08f94c"
            android:onClick="btn_cadastro"
            app:nb_text="Cadastrar"
            app:nb_textColor="#FFF"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            app:nb_textSize="16sp"/>

    </LinearLayout>


</LinearLayout>